<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>Biocs.Core</AssemblyName>
    <RootNamespace>Biocs</RootNamespace>
    <TargetFrameworks>netstandard1.1;netstandard2.0;net45</TargetFrameworks>
    <LangVersion>latest</LangVersion>
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\Biocs.Core.xml</DocumentationFile>
    <PackageId>Biocs.Core</PackageId>
    <Version>0.1.0</Version>
    <Authors>fog-bank</Authors>
    <Company>co3366353</Company>
    <Product>BioCSharp</Product>
    <Copyright>Copyright © 2019 fog-bank. Some rights reserved.</Copyright>
    <NeutralLanguage>en</NeutralLanguage>
    <AssemblyVersion>0.1.0.0</AssemblyVersion>
    <FileVersion>0.1.40111.0</FileVersion>
  </PropertyGroup>
  
  <PropertyGroup Condition=" '$(Configuration)' == 'Debug' AND '$(TargetFramework)' == 'net45' ">
    <RunCodeAnalysis>true</RunCodeAnalysis>
    <CodeAnalysisRuleSet>ExtendedDesignGuidelineRules.ruleset</CodeAnalysisRuleSet>
  </PropertyGroup>

  <ItemGroup>
    <CodeAnalysisDictionary Include="..\CustomDictionary.xml" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net45' ">
    <Reference Include="System" />
    <Reference Include="System.Core" />
  </ItemGroup>
  
  <ItemGroup Condition=" '$(Configuration)' == 'Debug' AND '$(TargetFramework)' != 'net45' ">
    <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="2.6.3" PrivateAssets="all" />
  </ItemGroup>

</Project>
